<div class="card mb-3">
    <div class="card-body">

        <div class="row no-gutters">
            <div class="col-md-3">
                <img src="~/images/@Model.ImageUrl" class="card-img">
            </div>
            <div style="padding-left: 20px;" class="col-md-9">
                
                    <h5 class="card-title">@Model.Name</h5>
                    <p class="card-text">Stok Adı : @Model.ProductStockName</p>
                    <p class="card-text">Stok Numarası : @Model.ProductId</p>
                    <p class="card-text">Stok Sayısı : @ViewBag.stockQuantity</p>
                    <p class="card-text">Ürün Açıklaması : @Model.Description</p>
                    <p class="card-text">Ürün Fiyatı : @Model.Price</p>
                    <p class="card-text">Depo Id : @Model.CategoryId</p>
                
            </div>
        </div>

    </div>

</div>
